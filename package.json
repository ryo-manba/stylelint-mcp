{
  "name": "stylelint-mcp",
  "version": "0.1.0",
  "description": "MCP server for Stylelint",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryo-manba/stylelint-mcp"
  },
  "license": "MIT",
  "keywords": [
    "stylelint",
    "mcp"
  ],
  "author": "ryo-manba",
  "type": "module",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "bin": {
    "stylelint-mcp": "./dist/mcp-cli.js"
  },
  "scripts": {
